@model IEnumerable<ProductApp.Models.Product>

<h2 class="text-center mb-4">Danh sách sản phẩm</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 text-center mb-4">
            <div class="card shadow-sm p-2">
                <img src="@item.Image" alt="@item.Name"
                     class="img-fluid" style="height:200px;object-fit:cover;border-radius:8px;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-danger fw-bold">
                        @string.Format("{0:N0}₫", item.SalePrice ?? item.Price)
                    </p>
                    <small class="text-muted">@item.Category?.CategoryName</small>
                </div>
            </div>
        </div>
    }
</div>
